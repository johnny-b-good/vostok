[Unit]
Description=A content server for the Gemini protocol

[Service]
WorkingDirectory=/opt/vostok
ExecStart=/usr/bin/env node /opt/vostok/src/vostok.js

Restart=always
RestartSec=5s
StartLimitBurst=3
StartLimitInterval=60

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=vostok

User=vostok
Group=vostok

Environment=NODE_ENV=production VOSTOK_CONFIG_PATH=/srv/vostok/config.json

[Install]
WantedBy=multi-user.target
